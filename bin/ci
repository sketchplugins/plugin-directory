#!/usr/bin/env bash

set -e

build() {
    if [ "$CONTINUOUS_INTEGRATION" == "true" ] && [ "$TRAVIS_PULL_REQUEST" == "false" ]; then
        npm run build

        git checkout master
        git add README.md plugins.json
        if [ "$(git diff --cached --stat)" != "" ]; then
            git commit -m "build"
            git push "https://$GH_TOKEN@github.com/$TRAVIS_REPO_SLUG.git"
        fi
    fi
}

build
